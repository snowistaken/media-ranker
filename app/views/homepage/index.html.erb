
<body>
  <h2> Media Spotlight: <%= link_to @spotlight.title, work_path(@spotlight) %></h2>

  <div>
    <h3>Top Albums</h3>
    <ul>
      <% unless @top_albums.length == 0 %>
        <% @top_albums.each do |album| %>
          <li>
            <%= link_to album.title, work_path(album) %> 
          </li>
        <% end %>
      <% end %>
    </ul>
  </div>

  <div>
    <h3>Top Books</h3>
    <ul>
      <% unless @top_books.length == 0 %>
        <% @top_books.each do |book| %>
          <li>
            <%= link_to book.title, work_path(book) %> 
          </li>
        <% end %>
      <% end %>
    </ul>
  </div>

  <div>
    <h3>Top Movies</h3>
    <ul>
      <% unless @top_movies.length == 0 %>
        <% @top_movies.each do |movie| %>
          <li>
            <%= link_to movie.title, work_path(movie) %> 
          </li>
        <% end %>
      <% end %>
    </ul>
  </div>
</body>

